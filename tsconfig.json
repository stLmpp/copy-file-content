{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types",
    "declaration": true
  },
  "exclude": ["bin", "types", "post-install.js"]
}
